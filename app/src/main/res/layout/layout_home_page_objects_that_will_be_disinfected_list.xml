<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/objectsThatWillBeDisinfectedListMainPageName"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/objectsThatWillBeDisinfectedListMainPageDetailes"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="detailes"
        app:layout_constraintEnd_toStartOf="@+id/objectsThatWillBeDisinfectedListMainPageRemove"
        app:layout_constraintStart_toEndOf="@+id/objectsThatWillBeDisinfectedListMainPageName"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/objectsThatWillBeDisinfectedListMainPageRemove"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="REMOVE"
        android:textColor="#FF0000"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>